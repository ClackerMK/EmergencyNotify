<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lev.perschin.emergencynotify.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Spinner
        android:layout_width="352dp"
        android:layout_height="49dp"
        android:id="@+id/spinner"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:layout_marginRight="16dp" />

    <Button
        android:text="@string/notify_small"
        android:layout_width="200dp"
        android:id="@+id/notifyButton"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSmallSel"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:layout_marginRight="16dp"
        android:layout_height="60dp" />

    <Button
        android:text="@string/notify_big"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/notifyButtonBig"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="@string/initiates_a_broadcast_on_a_small_selection_of_transmission_types"
        android:layout_width="352dp"
        android:layout_height="60dp"
        android:id="@+id/textViewSmallSel"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.53" />

    <TextView
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:id="@+id/textView3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/notifyButton"
        android:text="@string/initiates_a_broadcast_on_a_big_selectin_of_transmission_types"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.56" />

</android.support.constraint.ConstraintLayout>
